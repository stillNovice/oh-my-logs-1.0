html
  head
    title= title
    link(href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    script(src='/lib/jquery-3.1.1.js')
    script(type="text/javascript" src="js/materialize.min.js")
  
  style(type="text/css").
    body {
      margin: 20px;
    }
  
  body
    if prev
      a(id="back-btn" class="waves-effect waves-light btn")
        i(class="large material-icons") BACK

    if notLast        
      h1= msg
      table(class="highlight")
        thead
          tr
            th name
            th format
        tbody
          each val in arr
            tr
              td
                a(href='?dir=' + prev + '/' + val.fileName)= val.fileName
              td
                img(src=val.fileType width="25px" height="25px")
    else
      h1= msg
      p= arr
    
    script(src='/js/script-one.js')